{
  "manifest_version": 3,
  "name": "Text to Speech Reader",
  "version": "2.0",
  "description": "Select text and have it read aloud using a sidebar player.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tts",
    "contextMenus",
    "offscreen",
    "sidePanel"
  ],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "Open Text to Speech Reader Sidebar"
  },
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
